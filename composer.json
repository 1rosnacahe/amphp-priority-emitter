{
    "name": "justblackbird/amphp-priority-emitter",
    "type": "library",
    "description": "In-memory implementation of async emitter with prioritized messages",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Simushev",
            "email": "simushevds@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/JustBlackBird/amphp-priority-emitter/issues",
        "source": "https://github.com/JustBlackBird/amphp-priority-emitter"
    },
    "require": {
        "php": "^7.4",
        "amphp/amp": "^2.4",
        "react/promise": "^2",
        "justblackbird/stable-priority-queue": "^0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "amphp/phpunit-util": "^1.4",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.12"
    },
    "autoload": {
        "psr-4": {
            "JustBlackBird\\AmpPriorityEmitter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JustBlackBird\\AmpPriorityEmitter\\Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/.github",
            "/examples",
            "/tests",
            ".gitignore",
            "phpcs.xml.dist",
            "phpunit.xml",
            "psalm.xml"
        ]
    }
}
